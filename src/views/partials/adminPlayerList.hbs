{{#each player}}
  <div class="box">
    <div class="box-wrapper">
      <div class="box-text">
        <div class="text">
          <h3>{{name}}</h3>
          <p>
            {{description}}
          </p>
        </div>
      </div>
      <div class="box-image">
        <img
          {{! src="img/deportistas/Angela_Ruiz.jpeg" }}
          alt="Imagen del deportista en concreto"
          class="image"
        />
      </div>
    </div>
    <div class="buttons">
      <a href="/delete/{{_id}}" class="button-delete">Eliminar</a>
    </div>
  </div>
{{/each}}