{{#each player}}
  <div class="box">
    <div class="box-wrapper">
      <div class="box-text">
        <div class="text">
          <h3>{{name}}</h3>
          <p>
            {{description}}
          </p>
        </div>
      </div>
      <div class="box-image">
        <img
          src="/img/deportistas/{{image}}"
          alt="Imagen del deportista en concreto"
          class="image"
        />
      </div>
    </div>
  </div>
{{/each}}